#!/bin/bash

do_sync() {
    # rclone sync /userdata/system/backup.sh onedrive:/Games/Batocera/system
    # rclone sync /userdata/system/batocera.conf onedrive:/Games/Batocera/system

    echo "> SAVES sync" -------------------------------------------------------------------------------------
    rclone rc sync/sync srcFs=/userdata/saves dstFs=backup:/Games/Batocera/saves -P

    echo "> BIOS sync" --------------------------------------------------------------------------------------
    rclone rc sync/sync srcFs=/userdata/bios dstFs=backup:/Games/Batocera/bios -P

    echo "> ROMS sync" --------------------------------------------------------------------------------------
    rclone rc sync/sync srcFs=/userdata/roms dstFs=backup:/Games/Batocera/roms -P
}

case "$1" in
    manual)
        do_sync
        ;;
    start)
        nohup rclone rcd --rc-no-auth &>/dev/null &
        ;;
    stop)
        rclone rc core/quit &>/dev/null
        ;;
    status)
        rclone rc core/stats
        ;;
esac
