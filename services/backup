#!/bin/bash

# --------------------- CONFIG BEGIN ---------------------
# The saves folder on your cloud storage.
destinationFolder=/Games/Batocera/saves
# ---------------------- CONFIG END ----------------------

do_sync() {
    # TODO: improve output
    rclone rc sync/sync srcFs=/userdata/saves dstFs=backup:${destinationFolder} -P

    # TODO: other stuff to consider:
    # /userdata/system/batocera.conf
    # /userdata/bios
    # /userdata/roms
}

case "$1" in
    manual)
        do_sync
        ;;
    start)
        nohup rclone rcd --rc-no-auth &>/dev/null &
        ;;
    stop)
        rclone rc core/quit &>/dev/null
        ;;
    status)
        # TODO: improve output
        rclone rc core/stats
        ;;
esac
